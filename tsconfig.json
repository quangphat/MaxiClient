{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "lib": [ "es6", "dom" ],
    "types": [ "webpack-env" ],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "watch": true,
    "skipLibCheck": true
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
